<?xml version="1.0"?>
<launch>

  <arg name="topicIns" default="/amiro2/front_camera/image_raw"/>
  <arg name="topicOut" default="/amiro2/ism/cam"/>
  <arg name="parent_frame" default="amiro2/base_link"/>
  <arg name="grid_resolution" default="0.2"/>
  <arg name="imageWidth" default="800"/>
  <arg name="imageHeight" default="800"/>
  <arg name="object_extend" default="0.3"/>
  <arg name="cam_xTranslation" default="0.0495"/>
  <arg name="cam_yTranslation" default="0"/>
  <arg name="cam_zTranslation" default="0.033"/>
  <arg name="cam_pitch" default="0.0"/>
  <arg name="cam_yaw" default="0.0"/>
  <arg name="cam_FOV" default="0.6981317"/><!-- 1.3962634 / 2 = 0.6981317 -->

  <node type="image2ism.py" name="image2ismPedestrian" pkg="image_inverse_sensor_model" respawn="true" output="screen">
    <param name="topicIns" value="$(arg topicIns)" />
    <param name="topicOut" value="$(arg topicOut)" />
    <param name="imageWidth" value="$(arg imageWidth)" />
    <param name="imageHeight" value="$(arg imageHeight)" />
    <param name="cam_xTranslation" value="$(arg cam_xTranslation)" /> 
    <param name="cam_yTranslation" value="$(arg cam_yTranslation)" />
    <param name="cam_zTranslation" value="$(arg cam_zTranslation)" />
    <param name="cam_pitch" value="$(arg cam_pitch)" />  
    <param name="cam_yaw" value="$(arg cam_yaw)" />
    <param name="cam_FOV" value="$(arg cam_FOV)" /> 
    <param name="grid_resolution" value="$(arg grid_resolution)" />
    <param name="grid_xSizeInM" value="-1.0" />
    <param name="grid_ySizeInM" value="-1.0" />
    <param name="parent_frame" value="$(arg parent_frame)" />
  </node>
  
</launch>
